- title = "Kosen Advent Calendar"

!!! 5
%html
  %head
    %title
      = title
    %meta( charset="UTF-8" )
    %meta( name= "viewport" content="width=device-width, initial-scale=1.0" )
    %meta(property="og:type"        content="website" )
    %meta(property="og:url"         content="http://kosenconf.github.com/advent/" )
    %meta(property="og:title"       content="Kosen Advent Calendar" )
    %meta(property="og:site_name"   content="Kosen Advent Calendar"  )
    %meta(property="og:description" content="「高専」をテーマにした Advent Calendar のまとめページです。"  )
    %meta(property="og:image"       content="http://kosenconf.github.com/advent/assets/kosen50.png"  )
    %script( type="text/javascript" src="assets/jquery-1.8.3.min.js" )
    %script( type="text/javascript" src="assets/knockout-2.2.0.js" )
    %script( type="text/javascript" src="assets/entries.js" )
    %script( type="text/javascript" src="assets/advent.js" )
    %link( rel="stylesheet" type="text/css" href="assets/bootstrap/css/bootstrap.min.css" )
    %link( rel="stylesheet" type="text/css" href="assets/advent.css" )

    %script( type="text/html" id="entry-template" )
      .entry
        %h4
          %a( target="_blank" data-bind="text: title, attr: { href: url }" )
        .author
          %img.icon( width="24" height="24" data-bind="attr: { src: author.icon }" )
          %span.name( data-bind="text: author.name" )
        .social-widgets
          %span.widget.facebook-like( data-bind="likeButton: url" )
          %span.widget.twitter-tweet( data-bind="tweetButton: url" )
        .day
          %span><
            DAY
          %br
          %strong( data-bind="text: $index() + 1" )><

  %body
    %header.navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand( href="./" )
            = title

    #main
      .container
        .row
          .span12
            %h2
              2012
          .span6
            %h3
              General
              %a{ :href => "http://atnd.org/events/34507", :title => "Kosen Advent Calendar 2012 : ATND", :target => "_blank" }><
                詳細 >
            .entries( data-bind="template: { name: 'entry-template', foreach: entries2012general }" )

          .span6
            %h3
              Teachers
              %a{ :href => "http://kosen-teachers.tumblr.com/about", :title => "Kosen Advent Calendar By Teachers", :target => "_blank" }><
                詳細 >
            .entries( data-bind="template: { name: 'entry-template', foreach: entries2012teachers }" )

        .row
          .span6
            %h2
              2011
              %a{ :href => "http://atnd.org/events/22570", :title => "Kosen Advent Calendar 2011 : ATND", :target => "_blank" }><
                詳細 >
            .entries( data-bind="template: { name: 'entry-template', foreach: entries2011 }" )

          .span6
            %h2
              2010
              %a{ :href => "http://atnd.org/events/10508", :title => "kosenocnf Advent Calendar : 2010 : ATND", :target => "_blank" }><
                詳細 >
            .entries( data-bind="template: { name: 'entry-template', foreach: entries2010 }" )

